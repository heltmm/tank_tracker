
<%= form_tag("/transfer_update", :id => "transfer_update_form", method: "patch", remote: true) do %>
  <p>Transfer Update</p>

  <%= label_tag(:from_number, "From") %>
  <%= select_tag("tank[from_tank_type]", options_for_select([["FV", "FV"], ["BBT", "BBT"]])) %>
  <%= number_field_tag("tank[from_number]", nil, :required => true) %><br>
  <%= label_tag(:to_number, "To") %>
  <%= select_tag("tank[to_tank_type]", options_for_select([["FV", "FV"], ["BBT", "BBT"]])) %>
  <%= number_field_tag("tank[to_number]", nil, :required => true) %><br>
  <%= label_tag(:volume, "Volume") %>
  <%= number_field_tag("tank[volume]", nil, :required => true) %><br>
  <%= label_tag(:all, "Transfer All") %>
  <%= check_box_tag("tank[all]", true ) %><br>

  <%= submit_tag("Update") %>
<% end %>
